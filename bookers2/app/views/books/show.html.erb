<%= flash[:notice] %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <table class="table">
          <tbody><tr></tr>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
          </tbody>
        </table>

      <div class="row">
        <li>
          <%= link_to link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog fa-w-20"></i>
          <% end %>
        </li>
      </div>

      <h2 class="mt-3">New book</h2>

      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
            <tbody>
              <% if @book.user == current_user %>
                <tr>
                  <td><%= link_to image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @book.user.name,book_path(@book.id) %>
                  </td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                  <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                  <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
                </tr>
              <% else %>
                <tr>
                  <td><%= link_to image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @book.user.name %>
                  </td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
     </div>
  </div>

