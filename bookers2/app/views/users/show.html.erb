<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>
</div>

<% @books.each do |book| %>
<div>
<%= link_to book_path(book.id) do %>
  <%= image_tag book.user.get_profile_image(80,80) %>
<% end %>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>