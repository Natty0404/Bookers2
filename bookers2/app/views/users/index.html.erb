<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody><tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
            <th>introduction</th>
            <th></th>
          </tr>
          </tbody>
        </table>

      <div class="row">
        <li>
          <%= link_to link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog fa-w-20"></i>
          <% end %>
        </li>
      </div>

      <h2 class="mt-3">New book</h2>

      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= link_to image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
        </div>
     </div>
  </div>

